{
  "name": "litest-monorepo",
  "version": "0.0.1",
  "description": "Litest Testing Framework Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m2rads/litest"
  },
  "homepage": "https://litest.com",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "litest"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -b packages/core packages/mcp packages/litest",
    "dev": "pnpm --parallel --filter=\"./packages/*\" run dev",
    "lint": "eslint .",
    "watch": "tsc --watch",
    "test": "playwright test",
    "clean": "pnpm --filter=\"./packages/*\" exec rm -rf lib tsconfig.tsbuildinfo && rm -rf node_modules",
    "npm-publish": "pnpm run clean && pnpm run build && pnpm run test && pnpm --filter=\"litest\" --filter=\"@litest/mcp\" publish"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "devDependencies": {
    "@litest/core": "workspace:*",
    "litest": "workspace:*",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "1.52.0-alpha-1743011787000",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript-eslint/utils": "^8.26.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-notice": "^1.0.0",
    "typescript": "^5.8.2",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "playwright": "1.52.0-alpha-1743011787000"
  },
  "private": true,
  "packageManager": "pnpm@10.9.0"
}
